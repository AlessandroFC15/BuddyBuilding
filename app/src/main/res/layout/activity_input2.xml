<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.buddybuilding.Input2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual seu nível de atividade física? "
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:padding="15dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/notVeryActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pouco Ativo"
            android:textSize="14sp"
            android:padding="20dp"
            android:onClick="selectActivityLevel"/>

        <RadioButton
            android:id="@+id/lightlyActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relativamente Ativo"
            android:textSize="14sp"
            android:padding="20dp"
            android:onClick="selectActivityLevel"/>

        <RadioButton
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativo"
            android:textSize="14sp"
            android:padding="20dp"
            android:onClick="selectActivityLevel"/>

        <RadioButton
            android:id="@+id/veryActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muito Ativo"
            android:textSize="14sp"
            android:padding="20dp"
            android:onClick="selectActivityLevel"/>
    </RadioGroup>

</LinearLayout>
